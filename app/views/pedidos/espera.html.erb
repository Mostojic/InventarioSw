<%if Pedido.find_by estado: 0%>
  <h1>Pedidos en espera</h1>
  <div class="container">
        <div class="col-md-6">
          <table class="table table-striped table-hover table-condensed   " >
            <thead>
              <tr>
                <th><div class="size-330">Cliente</div></th>
                <th><div class="size-165">Costo total</div></th>
                <th><div class="size-165">Fecha entrega</div></th>
                <th><div class="size-100"></div></th>
                <th><div class="size-100"></div></th>
              </tr>                  
            </thead>
            <%espera = Pedido.where(estado: [0]).order('entrega')%>
            <%espera.each do |a| %>
            
              <tr>
                <td><%=a.cliente%></td>
                <td><%=a.precio%></td>
                <td><%=a.entrega%></td>
                <td><%= button_to 'Confirmar',a, method: :edit%></td> 
                <td><%= button_to 'Cancelar',a, method: :delete%></td> 
                
              </tr>
            
            <%end%>
          </table>  
          </div>
        </div>
<%else%>
  <h1>No existen pedidos en espera</h1>
<%end%>
<input type="button" value="Volver" onClick="history.back()" />