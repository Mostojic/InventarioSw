<html>
<head>
<title>Pedidos</title>
</head>
<body>

<h1>Pedidos pendientes</h1>

<div class="container">
      <div class="col-md-6">
        <table class="table table-striped table-hover table-condensed   " >
          <thead>
            <tr>
              <th><div class="size-330">Cliente</div></th>
              <th><div class="size-165">Costo total</div></th>
              <th><div class="size-165">Abonado</div></th>
              <th><div class="size-165">Fecha entrega</div></th>
              <th><div class="size-165"></div></th>
            </tr>                  
          </thead>
          <% @pedidos.each do |a| %>
          <% if a.entregado === false then%>
            <tr>
              <td><%=a.cliente%></td>
              <td><%=a.precio%></td>
              <td><%=a.abonado%></td>
              <td><%=a.entrega%></td>
              <td><button type="button" class="btn btn-primary" onClick="location.href='pedidos/new'" />Entregar</button></td>
              <td><%= button_to 'Eliminar', a, method: :delete%></td>  
            </tr>
          <% end %>
          <%end%>
        </table>  
      </div>
    </div>
    

    <%=will_paginate @productos%>
<p><input type="button" value="Ingresar nuevo pedido" onClick="location.href='pedidos/new'" />

</body>
</html>
