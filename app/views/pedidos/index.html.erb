<html>
<head>
<title>Pedidos</title>
</head>
<body>

<%if Pedido.find_by estado: 1%>
<h1>Pedidos pendientes</h1>
<div class="container">
      <div class="col-md-6">
        <table class="table table-striped table-hover table-condensed   " >
          <thead>
            <tr>
              <th><div class="size-330">Cliente</div></th>
              <th><div class="size-165">Costo total</div></th>
              <th><div class="size-165">Abonado</div></th>
              <th><div class="size-165">Fecha entrega</div></th>
              <th><div class="size-165"></div></th>
            </tr>                  
          </thead>
          <% pedidos = Pedido.where(estado: [1])%>
          <% pedidos.each do |a| %>
          <% if a.estado == 1 then%>
            <tr>
              <td><%=a.cliente%></td>
              <td><%=a.precio%></td>
              <td><%=a.abonado%></td>
              <td><%=a.entrega%></td>
              <td><button type="button" class="btn btn-primary" onClick="location.href='pedidos/<%= a.id%>/edit'" />Entregar</button></td>
              
            </tr>
          <% end %>
          <%end%>
        </table>
        <%=will_paginate @pedidos%>
        </div>
      </div>
<%end%>

<p><input type="button" value="Ingresar nuevo pedido" onClick="location.href='pedidos/new'" />

<%if Pedido.find_by estado: 0%>
<h1>Pedidos en espera</h1>
<div class="container">
      <div class="col-md-6">
        <table class="table table-striped table-hover table-condensed   " >
          <thead>
            <tr>
              <th><div class="size-330">Cliente</div></th>
              <th><div class="size-165">Costo total</div></th>
              <th><div class="size-165">Fecha entrega</div></th>
              <th><div class="size-165"></div></th>
            </tr>                  
          </thead>
          <% @pedidos.each do |a| %>
          <% if a.estado == 0 then%>
            <tr>
              <td><%=a.cliente%></td>
              <td><%=a.precio%></td>
              <td><%=a.entrega%></td>
              <td><button type="button" class="btn btn-primary" onClick="location.href='pedidos/<%= a.id%>/edit'" />Entregar</button></td>
              
            </tr>
          <% end %>
          <%end%>
        </table>  
        </div>
      </div>
<%end%>
</body>
</html>
