<%if Pedido.find_by estado: 1%>
<h1>Pedidos pendientes</h1>
<div class="container">
      <div class="col-md-6">
        <table class="table table-striped table-hover table-condensed   " >
          <thead>
            <tr>
              <th><div class="size-330">Cliente</div></th>
              <th><div class="size-165">Costo total</div></th>
              <th><div class="size-165">Abonado</div></th>
              <th><div class="size-165">Fecha entrega</div></th>
              <th><div class="size-165"></div></th>
            </tr>                  
          </thead>
          
          <% @pedidos_pendiente.each do |a| %>
          
            <tr>
              <td><%=a.cliente%></td>
              <td><%=a.precio%></td>
              <td><%=a.abonado%></td>
              <td><%=a.entrega%></td>
              <td><button type="button"  onClick="location.href='pedidos/<%= a.id%>/edit'" />Confirmar</button></td>
              
            </tr>
          
          <%end%>
        </table>
        <%=will_paginate @pedidos_pendiente%>
        </div>
      </div>
<%else%>
<h1>No existem pedidos pendientes</h1>
<%end%>

<input type="button" value="Volver" onClick="history.back()" />
