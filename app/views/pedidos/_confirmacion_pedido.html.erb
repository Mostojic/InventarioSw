<%= form_for(@pedido) do |f| %>
<h1>Para confirmar pedido ingrese cantidad abonada por cliente</h1>
<% @pedido.errors.full_messages.each do |message|%>
	<div class="letter-red"><%=message%></div>
	<p></p>
	<%end%>
<div>Cantidad abonada:</div>
<div class="field">
	<%= f.text_field :abonado, {:value => @abonado} %>
</div>

<p></p>
<div>Comentario:</div>
<div class="field">
	<%= f.text_area :comentario, placeholder: "Comentario" %>
</div>

<p>
	
</p>
<div class="field">

	<%= f.submit "Guardar" %>
</div>
<%end%>