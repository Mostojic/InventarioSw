<html>
<head>
<title>Escritorio</title>
<style type="text/css">
	.derecha{
		float: right;
	}
	.izq{
		float: left;
	}
</style>
</head>
<%if can? :create,Pedido%>
<body>


<div>

<span class="izq">
	<h2>Proximos pedidos</h2>

	        <table class="table table-striped table-hover table-condensed " >


	          <thead>
	            <tr>
	              <th><div class="size-200">Nombre cliente</div></th>
	              <th><div class="size-100">Abonado</div></th>
	              <th><div class="size-100">Precio Total</div></th>
	              <th><div class="size-100">Fecha entrega</div></th>
	              <th><div class="size-200">Productos</div></th>
	            </tr>                  
	          </thead>
	          <% @pedidos.each do |a| %>
	          	<%fecha = a.entrega%>
	          	<%fecha = fecha-7%>
	          	<%if fecha<Date.today and a.estado==1%>
		            <tr>
		              <td><%=a.cliente%></td>
		              <td><%=a.abonado%></td>
		              <td><%=a.precio%></td>
		              <td><%=a.entrega%></td>
		              <%c=0%>
		              <%@items.each do |b|%>

		              	<%if b.pedido_id==a.id and c>0%>
		              		<tr>
		              		<td><%=%></td>
		              		<td><%=%></td>
		              		<td></td>
		              		<td><%=%></td>		          
		              		<td><%=b.cantidad%> <%=b.producto.nombre%></td>
		              		</tr>
		              	<%end%>
		              	<%if b.pedido_id==a.id and c==0%>
		              	<%c=1%>
		              	<td><%=b.cantidad%> <%=b.producto.nombre%></td>
		              	<%end%>
		              <%end%>
		            </tr>

		        <%end%>
	          <% end %>
	          <%if Pedido.last%>
	          <tr>
	          	<td class="be-re"><u><%=link_to "VER TODOS", controller: "listas", action: "new"%></u></td>
	          	<td></td>
	          	<td></td>
	          	<td></td>

	          </tr>
	          <%end%>
	        </table>  
</span>



<%salir=0%>
<%fec=Date.today%>
<%fec=fec+7%>
<%@elementos.each do |a|%>
	<%if !a.vencimiento.blank?%>
		<%if a.vencimiento< Date.today+7 and salir==0%>
			<%salir=1%>
			<span class="derecha">
					<h3 class="be-alert">¡¡ .Atencion Vencimiento Insumos. !!</h3>
				      <div class="col-md-2 col-md-offset-1">
				        <table class="table table-striped table-hover table-condensed table-bordered" >
				          <thead>				          	
							<tr>
								<th><div class="size-100">Insumo</div></th>
							    <th><div class="size-100">Vence</div></th>
							</tr>
						  </thead>
				          	<%contador=0%>
				          	<%@elementos.each do |b|%>
				          		<%if !b.vencimiento.blank?%>				          			
									<%if b.vencimiento< Date.today+7 and contador<4%>
										<%contador=contador+1%>
								        <tr>
								        <td><%=b.insumo.nombre%></td>
								        <td><%=b.vencimiento%></td>
								        </tr>
								    <%end%>
								<%end%>
						  <%end%>
				        </table>  
				      </div>
				
			</span>
		<%end%>
	<%end%>
<%end%>

<%salir=0%>
<% @insumos.each do |a| %>
<%if Elemento.where(insumo_id: [a.id]).sum("cantidad")<10 and salir==0%>
	<%salir=1%>
	<span class="derecha">
			<h3 class="be-alert">¡¡ . Atencion Stock Insumos . !!</h3>
		      <div class="col-md-2 col-md-offset-1">
		        <table class="table table-striped table-hover table-condensed table-bordered" >
		          <thead>
		            <tr>
		              <th><div class="size-100">Insumo</div></th>
		              <th><div class="size-100">Cantidad</div></th>
		              <th><div>U</div></th>
		            </tr>
		          </thead>
		          	<%contador=0%>
		          	<% @insumos.each do |b| %>
		          		<%cant=Elemento.where(insumo_id: [b.id]).sum("cantidad")%>
		          		<%if cant<10 and contador<4	%>
							<tr>
								<td><%=b.nombre%></td>
								<td><%=cant%></td>
								<td><%=b.medida.nombre%></td>
							</tr>
							<%contador=contador+1%>
				   		<% end %>
				   <% end %>
		          
		        </table>  
		      </div>
		
	</span>
	<%end%>
<%end%>




</div>
	
</body>
<%else%>
<div class="row center-xs">
<%=image_tag('Fondo_login.png')%>
</div>
<% end -%>

</html>








