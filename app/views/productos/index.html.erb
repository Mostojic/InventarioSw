<html>
  <head>
  <title>Recetas </title>
  </head>
  <body>
    <h1> Productos disponibles</h1>
    <%if Producto.last%>
      <div class="container">
        <div class="col-md-4 col-md-offset-1">
          <table class="table table-striped table-hover table-condensed   " >
            <thead>
              <tr>
                <th><div class="size-330">Producto</div></th>
                <th><div class="size-165">Precio</div></th>
                <th><div class="size-165">     </div></th>
                <th><div class="size-165">     </div></th>
              </tr>                  
            </thead>
            <%productos = @productos.order('nombre')%>
            <% productos.each do |a| %>
              <tr>
                <td><%=a.nombre%></td>
                <td><%=a.precio%></td>
                <%if can? :create,Hoja%>         
                <td><input type="button" value="Editar receta" onClick="
                location.href='productos/<%=a.id%>'" /></td>
                <%else%>
                <td><input type="button" value="Ver receta" onClick="
                location.href='productos/<%=a.id%>'" /></td>
                <%end%>
                <% if can? :destroy, Producto %>
                  <%items=Item.all%>
                  <%si_hay=0%>
                  <%items.each do |b|%>
                    <%if b.producto_id==a.id%>
                      <%si_hay=1%>
                    <%end%>
                  <%end%>
                  <%if si_hay==0%>
                    <td><%= button_to 'Eliminar', a, method: :delete%></td>  
                  <%else%>
                    <td><%=%></td>
                  <%end%>
                <% end -%>
              </tr>
            <% end %>
          </table>  
          <%=will_paginate @productos%>

        </div>
      </div>
    <%else%>
      <% if can? :create, Producto %>
        <h3 class="be-re">No se han ingresado productos al sistema.</h3>
      <%else%>
        <h3 class="be-re">No se han ingresado productos al sistema. Conmun√≠quese con administrador</h3>
      <% end -%>
    <% end -%>
    <% if can? :create, Producto %>
          <p><input type="button" value="Ingresar nuevo producto" onClick="location.href='productos/new'" /></p>
          <% end -%>
    

    
    
  </body>
</html>

