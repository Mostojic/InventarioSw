<html>
  <head>
  <title>Recetas </title>
  </head>
  <body>
    <h1> Productos disponibles</h1>



    <div class="container">
      <div class="col-md-4 col-md-offset-1">
        <table class="table table-striped table-hover table-condensed   " >
          <thead>
            <tr>
              <th><div class="size-330">Producto</div></th>
              <th><div class="size-165">Precio</div></th>
              <th><div class="size-165">     </div></th>
              <th><div class="size-165">     </div></th>
            </tr>                  
          </thead>
          <%productos = @productos.order('nombre')%>
          <% productos.each do |a| %>
            <tr>
              <td><%=a.nombre%></td>
              <td><%=a.precio%></td>
              <td><input type="button" value="Editar receta" onClick="location.href='productos/<%=a.id%>'" /></td>
              <td><%= button_to 'Eliminar', a, method: :delete%></td>  
            </tr>
          <% end %>
        </table>  
        <%=will_paginate @productos%>
        <p><input type="button" value="Ingresar nuevo producto" onClick="location.href='productos/new'" /></p>
      </div>
    </div>
    

    
    
  </body>
</html>

