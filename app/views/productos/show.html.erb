
<html>
<head>
<title>Escritorio</title>
<style type="text/css">
  .derecha{
    float: right;
  }
  .izq{
    float: left;
  }
</style>
</head>

<body>

<h1><%= @producto.nombre%></h1>
<div>


<span class="izq">


          <table class="table table-striped table-hover table-condensed " >


            <thead>
              <tr>
                <th><div class="size-200">Insumo</div></th>
                <th><div class="size-100">Cantidad</div></th>
                <th><div class="size-100">Unidad</div></th>
                <th><div class="size-100">Costo</div></th>
                <th><div class="size-100"></div></th>
              </tr>                  
            </thead>
            <% @hojas.each do |a| %>
              <% if a.producto_id == @producto.id then%>    
              <tr>
                <td><%=a.insumo.nombre%></td>
                <td><%=a.porcion%></td>
                <td><%=a.insumo.medida.nombre%></td>
                <td><%=a.porcion*a.insumo.precio%></td>
                <%if can? :create,Producto%>         
                <td><%= button_to 'Eliminar', [a.producto, a], method: :delete%></td> 
                <%end%>
                </tr>
              <%end%>
            <%end%>
            <th>Costo Total</th>
            <td><%=%></td>
            <td><%=%></td>
            <%total=0.0%>
            <%@hojas.each do |a|%>
              <%if a.producto_id==@producto.id%>
                <%total=total+a.porcion*a.insumo.precio%>
              <%end%>
            <%end%>
            <th><%=total%></th>
            
          </table>  
 <%if can? :create,Hoja%>         
</span>
<span class="derecha">

<%= form_for([@producto,@hoja]) do |f| %>
<h1>Agregar porcion a receta .</h1>

<div class="field">
<%insumos = Insumo.all%>
<%insumos = insumos.order('nombre')%>
	<div>Insumo:</div>
    <%= f.collection_select :insumo_id, insumos, :id, :nombre %>
  </div>

<div class="field">
	<div>porcion:</div>

	<%= f.text_field :porcion, placeholder: "0.0" %>
</div>
<div class="field">
<p>
  
</p>
	<%= f.submit "Agregar" %>
</div>
</br>
<u class="be-re"><%= link_to "FINALIZAR RECETA", :action => "edit" %></u>
<%end%>
</span>
<% end -%>
</div>
</body>
