<%hoy=Date.today%>
<%ano=hoy.year%>
<%mes=hoy.month%>
<%dia=hoy.day%>
<%clientes=Cliente.all%>
</br>
<div class="container">
	<div class="col-md-3 col-md-offset-2">
		<table class="table table-striped table-hover table-condensed   " >
			<thead>
			    <tr>
			    	<th><div class="size-100">Rut</div></th>
			        <th><div class="size-220">Nombre</div></th>
			        <th><div class="size-150">cumplea√±os</div></th>
			        <th><div class="size-150">telefono</div></th>
			    </tr>                  
			</thead>
			<%clientes.each do |a|%>
				<%if !a.cumple.blank?%>
					<%cumpleanos=a.cumple%>
					<%cmes=cumpleanos.month%>
					<%cdia=cumpleanos.day%>
					<%cump = Date.new ano, cmes, cdia%>
					<%dias=(cump-hoy).to_i%>
					<%if dias<8 and dias>0%>
						<%@haycumple=1%>
						<tr>
							<td><%=a.rut%>-<%=a.digito%></td>
							<td><%=a.nombre%></td>
							<td><%=cdia%> del <%=cmes%></td>
							<%if a.telefono.blank? %>
								<td class="be-re">No ingresado</td>
							<%else%>
								<td><%=a.telefono%></td>
							<%end%>
						</tr>
					<% end %>
				<% end -%>
			<% end -%>
		</table>  
	</div>
</div>