<%if can? :create, Elemento%>
	<html>
	<head>
	<title>Agregar insumos </title>
	</head>
	<h1>Piezas de <%=@elemento.nombre%></h1>
	<body>
		    <div class="container">
		      <div class="col-md-4 col-md-offset-2">
		        <table class="table table-striped table-hover table-condensed   " >
		          <thead>
		            <tr>
		              <th><div class="size-100">Insumo</div></th>
		              <th><div class="size-100">Cantidad</div></th>
		              <th><div class="size-100">Vencen</div></th>
		              <th><div class="size-100"></div></th>

		            </tr>                  
		          </thead>
		          <%elementos=Elemento.where(insumo_id: [@elemento])%>
		          <%elementos=elementos.order(vencimiento: :desc)%>
		          <% elementos.each do |a| %>
		        		<tr>
			            <td><%=a.insumo.nombre%></td>
			            <td><%=a.cantidad%></td>
			            <%if  a.vencimiento-7 < Date.today%>
			              <td class="be-alert"><%=a.vencimiento%></td>
			              <%else%>
			              <td><%=a.vencimiento%></td>
			              	<% end -%>
			            <td><%= button_to "Eliminar", a, method: :delete %></td>
			            </tr>
		          <% end %>
		        </table>  
		        
		      </div>
		    </div>


		    
		    

		    

	</body>
	</html>



	 <u class="be-re"><th><%= link_to "AGREGAR INSUMOS AL INVENTARIO", :action => "new" %></th></u>
<% end -%>
