<%if can? :read, Pedido%>
  <%if Pedido.find_by estado: 2%>
  <h1>Pedidos entregados</h1>
  <div class="container">
        <div class="col-md-6">
          <table class="table table-striped table-hover table-condensed   " >
            <thead>
              <tr>
                <th><div class="size-330">Cliente</div></th>
                <th><div class="size-165">Costo total</div></th>
                <th><div class="size-165">Fecha entrega</div></th>
                <th><div class="size-200">Productos</div></th>
              </tr>                  
            </thead>
            
            <% @pedidos.each do |a| %>
            
              <tr>
                <td><%=a.cliente%></td>
                <td><%=a.precio%></td>
                <td><%=a.entrega%></td>
                <%c=0%>
                        <%@items.each do |b|%>
                          <%if b.pedido_id==a.id and c>0%>
                            <tr>
                              <td><%=%></td>
                              <td></td>
                              <td><%=%></td>             
                              <td><%=b.cantidad%> <%=b.producto.nombre%></td>
                            </tr>
                          <%end%>
                          <%if b.pedido_id==a.id and c==0%>
                            <%c=1%>
                            <td><%=b.cantidad%> <%=b.producto.nombre%></td>
                          <%end%>
                        <%end%>
                
              </tr>
            
            <%end%>
          </table>
          <%=will_paginate @pedidos%>
          </div>
        </div>
  <%else%>
  <h1>No existen pedidos en el registro</h1>
  <%end%>

  <input type="button" value="Volver" onClick="history.back()" />

  </br>
  </br>
  </br>
  </br>
  </br>
  </br>
  </br>
  </br>

<%end%>