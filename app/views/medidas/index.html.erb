<%if can? :create, Medida%>
	<html>
	<head>
	<title>Medidas</title>
	</head>
	<body>
	<h1>Unidades de medida disponibles</h1>
	<p></p>
	<p></p>
	<%if Medida.last%>
		<div class="container">
			      <div class="col-md-3 col-md-offset-2">
			        <table class="table table-striped table-hover table-condensed   " >
			          <thead>
			            <tr>
			              <th><div class="size-220">Unidade de medida</div></th>
			              <th><div class="size-100"></div></th>
			            </tr>                  
			          </thead>
			          <% @medidas.each do |a| %>
						<tr>
							<td><%=a.nombre%></td>
							
							<%insumos=Insumo.all%>
							<%si_hay=0%>
							<%insumos.each do |b|%>

								<%if b.medida_id==a.id%>
									<%si_hay=1%>
								<%end%>
							<%end%>
							<%if si_hay==0%>
								<td><%= button_to 'Eliminar', a, method: :delete%></td>  
							<%else%>
								<td><input type="button" value="Editar" onClick="location.href='medidas/<%=a.id%>/edit'" /></td>
							<%end%>
						</tr>
						<% end %>
			        </table>  
			      </div>
			    </div>
	<%else%>
		<h3 class="be-re">No se han ingresado unidades de medida al sistema.</h3>
	<% end -%>
	<p><input type="button" value="Ingresar nueva unidad de medida" onClick="location.href='medidas/new'" /></p>

	</body>
	</br>
	</br>	
	</br>
	</br>
	</html>
<%end%>